{
  "name": "NitroAudioRecorderPlayer",
  "version": "4.4.0",
  "summary": "React Native Audio Recorder and Player.",
  "homepage": "https://github.com/hyochan/react-native-audio-recorder-player",
  "license": "MIT",
  "authors": "hyochan <hyo@hyo.dev> (https://github.com/hyochan)",
  "platforms": {
    "ios": "15.1"
  },
  "source": {
    "git": "https://github.com/hyochan/react-native-audio-recorder-player.git",
    "tag": "4.4.0"
  },
  "source_files": [
    "ios/**/*.{swift}",
    "ios/**/*.{m,mm}",
    "nitrogen/generated/shared/**/*.{h,hpp,c,cpp,swift}",
    "nitrogen/generated/ios/**/*.{h,hpp,c,cpp,mm,swift}"
  ],
  "exclude_files": [
    "ios/AudioRecorderPlayer-Bridging-Header.h"
  ],
  "pod_target_xcconfig": {
    "SWIFT_VERSION": "5.0",
    "SWIFT_ACTIVE_COMPILATION_CONDITIONS": "$(inherited)",
    "GCC_PREPROCESSOR_DEFINITIONS": "$(inherited) FOLLY_NO_CONFIG FOLLY_MOBILE=1 FOLLY_USE_LIBCPP=1",
    "CLANG_CXX_LANGUAGE_STANDARD": "c++20",
    "SWIFT_OBJC_INTEROP_MODE": "objcxx",
    "DEFINES_MODULE": "YES",
    "HEADER_SEARCH_PATHS": [
      "\"$(PODS_ROOT)/Headers/Private/Yoga\"",
      "$(PODS_ROOT)/glog",
      "$(PODS_ROOT)/boost",
      "$(PODS_ROOT)/DoubleConversion",
      "$(PODS_ROOT)/fast_float/include",
      "$(PODS_ROOT)/fmt/include",
      "$(PODS_ROOT)/SocketRocket",
      "$(PODS_ROOT)/RCT-Folly"
    ],
    "OTHER_CPLUSPLUSFLAGS": "$(inherited) -DRCT_NEW_ARCH_ENABLED=1 ",
    "OTHER_SWIFT_FLAGS": "$(inherited) -DRCT_NEW_ARCH_ENABLED"
  },
  "compiler_flags": "-DFOLLY_NO_CONFIG -DFOLLY_MOBILE=1 -DFOLLY_USE_LIBCPP=1 -Wno-comma -Wno-shorten-64-to-32  -DRCT_NEW_ARCH_ENABLED=1",
  "dependencies": {
    "React-Core": [

    ],
    "React-jsi": [

    ],
    "React-callinvoker": [

    ],
    "NitroModules": [

    ],
    "React-RCTFabric": [

    ],
    "ReactCodegen": [

    ],
    "RCTRequired": [

    ],
    "RCTTypeSafety": [

    ],
    "ReactCommon/turbomodule/bridging": [

    ],
    "ReactCommon/turbomodule/core": [

    ],
    "React-NativeModulesApple": [

    ],
    "Yoga": [

    ],
    "React-Fabric": [

    ],
    "React-graphics": [

    ],
    "React-utils": [

    ],
    "React-featureflags": [

    ],
    "React-debug": [

    ],
    "React-ImageManager": [

    ],
    "React-rendererdebug": [

    ],
    "React-renderercss": [

    ],
    "hermes-engine": [

    ],
    "glog": [

    ],
    "boost": [

    ],
    "DoubleConversion": [

    ],
    "fast_float": [

    ],
    "fmt": [

    ],
    "RCT-Folly": [

    ],
    "SocketRocket": [

    ],
    "RCT-Folly/Fabric": [

    ]
  },
  "public_header_files": [
    "nitrogen/generated/shared/**/*.{h,hpp}",
    "nitrogen/generated/ios/NitroAudioRecorderPlayer-Swift-Cxx-Bridge.hpp"
  ],
  "private_header_files": [
    "nitrogen/generated/ios/c++/**/*.{h,hpp}",
    "nitrogen/generated/shared/**/views/**/*"
  ],
  "info_plist": {
    "NSMicrophoneUsageDescription": "This app needs access to microphone to record audio."
  }
}
